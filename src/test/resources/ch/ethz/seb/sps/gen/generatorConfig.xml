<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
        
<generatorConfiguration>
    <context id="mysql" defaultModelType="conditional" targetRuntime="MyBatis3DynamicSql">
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        
        <plugin type="org.mybatis.generator.plugins.VirtualPrimaryKeyPlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <plugin type="ch.ethz.seb.sps.generator.AdditionalMapperMethodsPlugin"/>

        <commentGenerator>
            <property name="addRemarkComments" value="false"/>
        </commentGenerator>
        
        <jdbcConnection connectionURL="jdbc:h2:mem:gen"
                        driverClass="org.h2.Driver"
                        userId="SPSModelGenerator"/>
        
        <javaModelGenerator targetProject="src/main/java"
                            targetPackage="ch.ethz.seb.sps.server.datalayer.batis.model">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
            <property name="immutable" value="true"/>
            
        </javaModelGenerator>
        
        <javaClientGenerator type="ANNOTATEDMAPPER"
                             targetProject="src/main/java"
                             targetPackage="ch.ethz.seb.sps.server.datalayer.batis.mapper">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>
        

        <table tableName="user" domainObjectName="UserRecord" >
            <property name="immutable" value="true"/>
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
            <columnOverride column="creation_date" javaType="org.joda.time.DateTime" typeHandler="ch.ethz.seb.sps.server.datalayer.batis.JodaTimeTypeResolver" />
        </table>
        <table tableName="client_access" domainObjectName="ClientAccessRecord">
            <property name="immutable" value="true"/>
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
            <columnOverride column="creation_date" javaType="org.joda.time.DateTime" typeHandler="ch.ethz.seb.sps.server.datalayer.batis.JodaTimeTypeResolver" />
        </table>
        <table tableName="seb_group" domainObjectName="GroupRecord">
            <property name="immutable" value="true"/>
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        <table tableName="session" domainObjectName="SessionRecord">
            <property name="immutable" value="true"/>
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        <table tableName="screenshot_data" domainObjectName="ScreenshotDataRecord">
            <property name="immutable" value="true"/>
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        <table tableName="screenshot" domainObjectName="ScreenshotRecord">
            <property name="immutable" value="true"/>
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        
    </context>
</generatorConfiguration>